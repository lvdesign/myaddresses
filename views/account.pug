extends layout

block content
  .inner
    h2 Editez Votre Account #{user.name}
    if user 
    //- src=`/uploads/gravatar/${ user.gravatars || 'avatar.svg' 
    //- https://res.cloudinary.com/lvcloud/image/upload/v1603011860/myaddresses/gravatar/avatar_ampxzt.svg
    img.avatar(src=`https://res.cloudinary.com/lvcloud/image/upload/v1603011860/myaddresses/gravatar/${ user.gravatars || 'avatar_ampxzt.svg' }` alt=user.name) 
     
    if !user.gravatars
    p ps. N'hésitez pas à ajouter un avatar de votre choix #{user.name} !  


    form(action="/account" method="POST" enctype="multipart/form-data")
      label(for="name") Votre Nom
      input(type="text" name="name" value=user.name)
      label(for="email") Votre Email Address
      input(type="email" name="email" value=user.email)

      label(for="gravatars") Votre Avatar
      input(type="file" name="gravatars" id="gravatars" accept="image/png, image/jpeg")
      
      input.button(type="submit" value="Update My Account")


    h2 Mes Addresses
      p Retrouvez vos adresses dans Admin
    